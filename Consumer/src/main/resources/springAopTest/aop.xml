<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
            http://www.springframework.org/schema/aop
            http://www.springframework.org/schema/aop/spring-aop.xsd">
    <bean id="dao" class="com.dubbo.consumer.test.aop.DaoImpl">

    </bean>

    <bean id="logger" class="com.dubbo.consumer.test.aop.Logger">

    </bean>

    <!--aop: 切面：切入点和通知-->
    <aop:config>
        <!--定义切面-->
        <aop:aspect id="logger" ref="logger">
            <!--定义切入点-->
            <aop:pointcut id="updateMethod" expression="execution(* com.dubbo.consumer.test.aop..*.*(..))"/>

            <!--通知-->
            <aop:before method="recordBefore" pointcut-ref="updateMethod"/>
            <aop:after method="recordAfter" pointcut-ref="updateMethod"/>
        </aop:aspect>
    </aop:config>

</beans>